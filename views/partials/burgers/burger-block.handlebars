<li class="collection-item amber">
    <div>
        {{burger_name}}  
        {{#if devoured}}
            <a class="remove waves-effect waves-light red darken-1 btn-floating btn-small right" data-id="{{id}}" data-eaten="{{devoured}}">
                <i class="material-icons right">close</i>
            </a>
        {{/if}}
    </div>
    <div>
        {{#unless devoured}}
            <a class="devour waves-effect waves-light red darken-1 btn-small" data-id="{{id}}" data-eaten="{{devoured}}">
                <i class="material-icons right">restaurant</i>
                Eat
            </a>
        {{/unless}}
    </div>
</li>