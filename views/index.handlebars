<main>
    <div class="row wrapper center">
        <div class="col s3 offset-s1">
            <h4>Burger Requests</h4>
            <ul id="burgerRequests" class="collection">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s4">
            {{!-- Burger IMG --}}
            <div class="valign-wrapper">
                <img class="responsive-img" src="/assets/images/burger.png">
            </div>
            {{!-- Create a burger --}}
            <div>
                <h3>EAT DA BURGER</h3>
                <form class="requestBurger">
                    <div class="form-group">
                        <label class="brown-text text-darken-3" for="burgerName">Can I take your order?</label>
                        <input type="text" id="burgerName" name="burger_name" class="input-field">
                    </div>
                    <a class="waves-effect waves-light red darken-1 btn-small" id="submitBurger">
                        <i class="material-icons right">fastfood</i>
                        Order
                    </a>
                </form>
            </div>
        </div>

        <div class="col s3">
            <h4>Burgers Eaten</h4>
            <ul class="collection">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div> {{!-- End of row --}}
</main> {{!-- End of main --}}

{{> burgers/footer}}