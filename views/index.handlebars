<h1>Burger ME</h1>

<div>
    <h2>Burger Requests</h2>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div>
    <h2>Burgers Eaten</h2>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<div>
    <h2>Add a Burger</h2>
    <form class="requestBurger">
        <div class="form-group">
            <label for="burgerName">Burger Name:</label>
            <input type="text" id="burgerName" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>